    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ReaderPollFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <include
            android:id="@+id/pollbarA"
            layout="@layout/verticalbar" />

        <include
            android:id="@+id/pollbarB"
            layout="@layout/verticalbar" />

        <include
            android:id="@+id/pollbarC"
            layout="@layout/verticalbar" />

        <include
            android:id="@+id/pollbarD"
            layout="@layout/verticalbar" />
